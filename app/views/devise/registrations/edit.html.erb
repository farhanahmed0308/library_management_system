<%= render "layouts/navbar2" %>

<%= devise_error_messages! %>
<%= render "devise/shared/error_messages", resource: resource %>
<div id="registration-update">
  <div id="registration-form">
<!-- <h2>Edit <%= resource_name.to_s.humanize %></h2> -->
    <p style="display: flex; justify-content: center;"><%= user_profile_link(current_user,width: "100%", height: 100 )%></p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %> 
      <div style="display: flex; flex-direction: column; justify-content: center; align-items: center">
        <div class="form-group">
          <%= f.label :email %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 320px;" %>
        </div>
        <div class="field">
          <%= f.label :username %><br />
          <%= f.text_field :username, autofocus: true, autocomplete: "username", style: "width: 320px;"  %>
        </div>
      
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="row">
          <div class="form-group">
            <%= f.label :password %> <i>(leave if don't want to change)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", style: "width: 320px;"  %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width: 320px;"  %>
        </div>
      
        <div class="field">
          <%= f.label :current_password %> <i>(current password)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", style: "width: 320px;"  %>
        </div>
        <div class="form-group" style="margin-top: 20px;">
          <%= f.file_field :profile_picture %>
        </div>
        <div class="actions" id="registration-action">
          <%= f.submit "Update", class: "btn btn-outline-danger" %>
        </div>
      </div>
    <% end %>
    
    <div style="margin-top: 20px;">
      <% if current_user.bookings.empty? %>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
      <% else %>
      <p>you can't delete your account,until return books</p>
      <% end %>
    </div>
     <%= link_to "Back", :back, class: "btn btn-default" %>
    </div>
  </div>








