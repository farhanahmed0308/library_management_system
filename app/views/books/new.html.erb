<%= render "layouts/navbar2" %>
<div style="display: flex;
flex-direction: column;
justify-content: center;
align-items: center;">
<form style="background-color: antiquewhite; width: 333px; padding: 26px; margin: 30px;
border-radius: 36px;">
<h1>Create Book</h1>
<%= form_with model: @book do |i|%>
<div class="form-group">
    <%= i.label :title%>
    <%= i.text_field :title%>
</div>
<div class="form-group" style="margin-top: 20px;">
    <%= i.label :author%>
    <%= i.text_field :author%>
</div>
<div class="form-group" style="margin-top: 20px;">
    <%= i.label :ISBN%>
    <%= i.text_field :isbn%>
</div>
<div class="form-group" style="margin-top: 20px;">
    <%= i.label :pdf %>
    <%= i.file_field :pdf %>
</div>
<div class="form-group" style="margin-top: 20px;">
    <%= i.label :type %>
    <%= i.select :type, ['Book', 'EBook', 'Periodical'] %>
</div>
<div class="form-group ">
    <%= i.submit%>
</div>
<% end %>
</form>
</div>


