<%= render "layouts/navbar2" %>
<% if flash[:notice].present? %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>
<h1 style="text-align: center; margin-top: 20px;font-size: 53px;">Books</h1>
<div class="container" style="width: 80%;">
<table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Book name</th>
        <th scope="col">Author</th>
        <th scope="col">Update</th>
        <th scope="col">Operation</th>
      </tr>
    </thead>
    <tbody>
        <% @books.each_with_index do |i,number|%>
    <tr>
        <th scope="row"><%= number + 1%></th>
        <td><%= i.title%></td>
        <td><%= i.author%></td>
        <td><%= link_to 'Update', "/books/#{i.id}/edit",class: "btn btn-outline-success btn-md", role: "button" %></td>

        <td><%= link_to 'Delete', "/destroy_user/#{i.id}/", data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-outline-success btn-md", role: "button" %></td>
        <!-- <td><%# link_to "show", voter_path(i),  class: "btn btn-outline-success btn-md", role: "button" %></td>
        <td><%# link_to "edit", edit_voter_path(i),  class: "btn btn-outline-success btn-md", role: "button" %></td> -->
      </tr>
      <% end %>
    </tbody>
  </table>
</div>