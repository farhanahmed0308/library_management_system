<div id="book_new1">
  <div id="book_new2">
    <div class="container">
     
        
          <h2>Forgot password?</h2>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
        
            <div class="form-group">
              <%= f.label :email, style: "    margin-bottom: 6px;" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "border-radius: 4px;" %>
            </div>
          
            <div class="form-group">
              <%= f.submit "reset password", style: "margin-top: 5px;" %>
            </div>
          <% end %>
            <%= render "devise/shared/links" %>
      
    </div>
  </div>
</div>











