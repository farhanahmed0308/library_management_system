<%= render "layouts/navbar2" %>
<% if @book.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this post from being saved:</h2>
    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

<div style="display: flex;
flex-direction: column;
justify-content: center;
align-items: center;">
<div style="background-color: antiquewhite; width: 333px; padding: 26px; margin: 30px;
border-radius: 36px;    margin-top: 123px;">
<h1>Create Book</h1>
<%= form_for @book, method: :post do |i|%>
<div class="form-group">
    <%= i.label :title%>
    <%= i.text_field :title%>
</div>
<div class="form-group" style="margin-top: 20px;">
    <%= i.label :author%>
    <%= i.text_field :author%>
</div>
<div class="form-group" style="margin-top: 20px;">
    <%= i.label :ISBN%>
    <%= i.text_field :isbn%>
</div>
<div class="form-group" style="margin-top: 20px;">
    <%= i.label :pdf %>
    <%= i.file_field :pdf %>
</div>
<div class="form-group" style="margin-top: 20px;">
    <%= i.label :front_page %>
    <%= i.file_field :front_page %>
</div>
<div class="form-group" style="margin-top: 20px;">
    <%= i.label :type %>
    <%= i.select :type, ['Book', 'EBook', 'Periodical'] %>
</div>
<div class="form-group ">
    <%= i.submit%>
</div>
<% end %>
</div>
</div>


